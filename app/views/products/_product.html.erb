<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>
  <p class="description">
    <%= product.description %>
  </p>
  <footer class="actions">
  <%  if product.quantity.zero? %>
  <button class="btn btn-primary disabled"><%= fa_icon "times-circle", text: 'Out of Stock' %></button>
  <% else %>
  <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-primary' , method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
    <% end %>
    <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
    <% end %>
  </footer>

  <aside class="price">
  <% if active_sale? %>
    <%= humanized_money_with_symbol product.price - product.price * sale_percent %>
  <% else %>
    <%= humanized_money_with_symbol product.price %>
  <% end %>
  </aside>


  <% if active_sale? %>
  <aside class="sale">
  SALE
  </aside>
  <% end %>

</article>
