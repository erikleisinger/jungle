
<section class="admin-sales-new">

  <header class="page-header">
    <h1>Admin &raquo; New Sale</h1>
  </header>

  <div class="well">
    <%= link_to 'All Sales', [:admin, :sales], class: 'btn btn-info' %>
  </div>
  <div class="container" style="max-width: 800px;">
<div class="panel panel-default">
<div class="panel-heading">
  <h4>Create New Sale</h4>
  </div>
  <div class="panel-body">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for [:admin, @sale] do |form| %>

        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control'%>
        </div>

       

        <div class="form-group">
          <%= form.label :starts_on %>
          <%= form.date_select :starts_on%>
        </div>
        <div class="form-group">
        <%= form.label :ends_on %>
        <%= form.date_select :ends_on%>
      </div>
      <div class="form-group">
      <%= form.label :percent_off %>
      <%= form.text_field :percent_off, class: 'form-control' %>
    </div>


        <%= form.submit 'Create Sale', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  </div>
  </div>
  </div>
</section>

