<section class="admin-sales-index">

  <header class="page-header">
    <h1>Admin &raquo; All Sales</h1>
  </header>

  <div class="well">
  <%= link_to 'Back to Dashboard', [:admin, :root], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default sales">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Status</th>
          <th>Percent Off</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @sales %>
        <tr>
        <td colspan="5"></td>
        <td> <%= link_to '+', [:new, :admin, :sale], class: 'btn btn-success' %></td>
        </tr>
      </tbody>
    </table>

  </div>

</section>
