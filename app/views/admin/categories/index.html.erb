<h1>Categories</h1>

<ul class="nav nav-tabs">

  <% @categories.each do |category| %>
    <% if category.id == 1 %>
    <li class="active">
    <% else %>
    <li>
    <% end %>
    <a data-toggle="tab" href="#<%=category.name%>"><%= category.name %></a>
    </li>
  <% end %>
</ul>
<div class="tab-content">
<% @categories.each do |category| %>
  <% if category.id == 1 %>
  <div id="<%= category.name %>" class="tab-pane fade in active">
  <% else %>
  <div id="<%=category.name%>" class="tab-pane fade">
  <% end %>
    <h3><%=category.name%> </h3>
    <div class="products">
    <% category.products.each do |product| %>
      <%= render partial: "admin/categories/product", locals: {product: product}%>
      <% end %>

    </div>
  </div>
  <% end %>
  </div>